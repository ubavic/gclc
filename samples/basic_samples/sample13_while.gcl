dim 120 80

ang_picture 5 5 115 70
ang_origin 45 25
ang_drawsystem_a

ang_draw_parametric_curve x {-3;x<5;x+0.05}{x;0.3*x*sin(3*x)}

% while loop in conjunction with parametric curves
number x -3
while { x<5 }
{
	ang_picture 10 10 100 70
	ang_origin 45 25

	expression y { 0.3*x*sin(3*x) }
	ang_point A x 0
	ang_point B x y
	drawsegment A B

	expression x { x+0.05}
}
