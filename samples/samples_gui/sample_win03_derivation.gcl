dim 120 80

ang_picture 5 5 115 70
ang_origin 45 25
ang_drawsystem_a

ang_draw_parametric_curve x
	{-3.5;x<6.5;x+0.05}
	{ x; sin(x) }


point X -3 0 6 0
getx x X

expression y { sin(x) }
expression dy { cos(x) }
ang_point A x y

expression Ax { x+1 }
expression Ay { y+dy }
ang_point A1 Ax Ay

ang_point P -3.5 0.5
printat_t P { y = \sin(x) }

cmark A
color 200 0 0
drawline A A1

animation_frames 100 5

